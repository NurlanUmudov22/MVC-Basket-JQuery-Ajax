
@* 
@{
    ViewData["Title"] = "Index";
}


<div class=" container mt-5">
    <h2 class="text-center"> Basket</h2>
    <div class="create-operation">
        <a asp-action="Create" class="btn btn-success text-white btn-sm">
            <i class="ti-plus"></i>
        </a>
    </div>


    <div class="card">

        <div class="card-block table-border-style">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th> Description</th>
                            <th>  Price</th>
                            <th>  Count</th>
                            <th>  Image</th>
                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="category-data">
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Price</td>
                                <td>@item.Count</td>
                                <td>@item.Image</td>


                                <td>                              
                                    <form class="d-inline" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                        <button type="submit" class="btn btn-danger text-white btn-sm"><i class="ti-trash"></i></button>
                                    </form>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>



@section js {
    <script src="~/admin/assets/js/archive.js">  </script>
} *@